    "handlebars-layouts": "^3.1.4",
    "laravel-mix": "^6.0",
    "laravel-mix-handlebars": "^1.0.3",
    "laravel-mix-purgecss": "^6.0.0",
    "postcss": "^8.1"
  },
  "bugs": {
    "url": "https://github.com/jefffairson/handlebars-mix/issues"
